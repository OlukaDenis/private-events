<% if logged_in? %>
    <h2> <%= @user.username %> </h2><br>
    


    <ul class="nav nav-tabs nav-justified" role="tablist">
        <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#creators"> My Events (<%= @my_events.count %>) </a>
        </li>
        <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#attending">Attending Events (<%= @attended_events.count %>) </a>
        </li>
    </ul>


    <div class="tab-content detail-tabs">
        <div class="tab-pane container active" id="creators">
            <h6 class="mt-5"> Upcoming (<%= @my_events.upcoming.count %>): </h6><hr>
            <% if  @my_events.upcoming.empty? %>
                <p><i> <small>No upcoming events </small></i></p>
            <% end %>
            <%= render 'shared/list', events: @my_events.upcoming %>  

            <h6 class="pt-5"> Past (<%= @my_events.past.count %>): </h6><hr>
            <% if  @my_events.past.empty? %>
                <p><i> <small>No past expired events </small></i></p>
            <% end %>
            <%= render 'shared/list', events: @my_events.past %>          
        </div>
        <div class="tab-pane container fade" id="attending">
            <h6 class="mt-5"> Upcoming (<%= @attended_events.upcoming.count %>): </h6><hr>
            <% if  @attended_events.upcoming.empty? %>
                <p><i> <small>No upcoming attending events </small></i></p>
            <% end %>
            <%= render 'shared/list', events: @attended_events.upcoming %>  

            <h6 class="pt-5"> Past (<%= @attended_events.past.count %>): </h6><hr>
            <% if  @attended_events.past.empty? %>
                <p><i> <small>No past attended events </small></i></p>
            <% end %>
            <%= render 'shared/list', events: @attended_events.past %> 

        </div>
    </div>

<% else %>
    <%= link_to "Please login", "#"%>
<% end %>