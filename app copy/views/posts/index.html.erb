<h1>Members Posts</h1>

<div class= "row">
 <div class="col-md-6 col-md-offset-3">
    <% if logged_in? %>
      <%= link_to "New Post", new_post_path, class: 'post-new btn btn-primary' %>
    <% end %>

    
    <%# <img src="img_avatar3.png" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:60px;"> %>
    <div class="media-body pt-3">
        <% @posts.each do |post| %>
            <% if logged_in? %>
            <p class="user-image"><%= gravatar_for current_user, size: 20 %>
                <i><%= "By: #{post.user.name}"%></i></p>
            <% end %>
            <h4><%= post.title %></h4>
            <p><%= post.body %></p>   
             <hr>
        <% end %>   
    </div>
    
  </div>
</div>
